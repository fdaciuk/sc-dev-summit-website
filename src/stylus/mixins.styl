rem($prop, $val)
  {$prop}: unit($val, 'px')
  {$prop}: unit($val / 10, 'rem')

selection()
  &::-moz-selection
    {block}
  &::-webkit-selection
    {block}
  &::selection
    {block}

placeholder()
  &:-moz-placeholder
    {block}

  &::-moz-placeholder
    {block}

  &:-ms-input-placeholder
    {block}

  &::-webkit-input-placeholder
    {block}

transition($val)
  transition $val

transform($val)
  -ms-transform $val
  -webkit-transform $val
  transform $val

filter($val)
  -webkit-filter $val
  filter $val

$transition
  transition(all .15s ease-in-out)
